---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

const { data: posts } = await supabase
  .from('posts')
  .select('*, users(username)')
  .order('created_at', { ascending: false });
---
<Layout title="Home">
    <div class="container">
        <section class="mb-5 p-5 rounded-4 shadow-lg text-white" style="background: linear-gradient(135deg, #131921 0%, #37475a 100%); overflow: hidden; position: relative;">
            <div class="row align-items-center position-relative" style="z-index: 2;">
                <div class="col-lg-7">
                    <h1 class="display-3 fw-bold mb-3">Premium Content. <br/><span style="color: #6200ea;">Stunning Design.</span></h1>
                    <p class="fs-4 opacity-75 mb-4">Discover the latest insights from top authors in a distraction-free environment.</p>
                    <a href="/signup" class="btn-purple btn-lg">Join the Community</a>
                </div>
            </div>
            <div style="position: absolute; right: -50px; bottom: -50px; width: 300px; height: 300px; background: rgba(98, 0, 234, 0.2); border-radius: 50%; filter: blur(60px);"></div>
        </section>

        <h2 class="fw-bold mb-4">Trending Stories</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {posts?.map((post: any) => (
                <div class="col">
                    <div class="card h-100 glass-card p-3 border-0">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-purple rounded-circle me-2" style="width: 10px; height: 10px; background: #6200ea;"></div>
                                <span class="text-uppercase small fw-bold text-muted">Article</span>
                            </div>
                            <h4 class="card-title fw-bold mb-3">{post.title}</h4>
                            <p class="text-muted small mb-3">By <strong>{post.users?.username}</strong> â€¢ {new Date(post.created_at).toLocaleDateString()}</p>
                            <p class="card-text text-secondary mb-4">{post.content.substring(0, 120)}...</p>
                        </div>
                        <div class="card-footer bg-transparent border-0 px-3 pb-3">
                            <a href={`/post/${post.id}`} class="btn-purple w-100 text-center text-decoration-none d-block">Read Story</a>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</Layout>