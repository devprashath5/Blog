---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Create Account">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px; border: 1px solid #ddd;">
            <h2 class="fw-bold mb-4" style="color: var(--amazon-dark);">Create Account</h2>
            <form action="/api/auth/signup" method="POST">
                <div class="mb-3">
                    <label class="form-label fw-bold small">Your name</label>
                    <input type="text" name="username" class="form-control" style="border-color: #a6a6a6;" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold small">Email</label>
                    <input type="email" name="email" class="form-control" style="border-color: #a6a6a6;" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold small">Password</label>
                    <input type="password" name="password" class="form-control" placeholder="At least 6 characters" style="border-color: #a6a6a6;" required />
                </div>
                <button type="submit" class="btn btn-amazon w-100 mb-3" style="background: #6200ea; font-weight: 600;">Verify email</button>
            </form>
            <hr />
            <p class="small">Already have an account? <a href="/login" style="color: #007185; text-decoration: none;">Sign in</a></p>
        </div>
    </div>
</Layout>