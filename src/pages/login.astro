---
import Layout from '../layouts/Layout.astro';
import { getSession } from '../lib/auth';

const session = getSession(Astro.cookies);
if (session) return Astro.redirect('/dashboard');
---
<Layout title="Sign In">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px; border: 1px solid #ddd;">
            <h2 class="fw-bold mb-4" style="color: var(--amazon-dark);">Sign In</h2>
            <form action="/api/auth/login" method="POST">
                <div class="mb-3">
                    <label class="form-label fw-bold small">Email</label>
                    <input type="email" name="email" class="form-control" style="border-color: #a6a6a6;" required />
                </div>
                <div class="mb-3">
                    <div class="d-flex justify-content-between">
                        <label class="form-label fw-bold small">Password</label>
                    </div>
                    <input type="password" name="password" class="form-control" style="border-color: #a6a6a6;" required />
                </div>
                <button type="submit" class="btn btn-amazon w-100 mb-3" style="background: #6200ea; font-weight: 600;">Sign In</button>
            </form>
            <div class="text-center mt-3">
                <p class="small text-muted mb-2">New to BlogSpace?</p>
                <a href="/signup" class="btn btn-light w-100 border shadow-sm small" style="background: #f0f2f2;">Create your account</a>
            </div>
        </div>
    </div>
</Layout>