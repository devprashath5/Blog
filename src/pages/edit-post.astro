---
import Layout from '../layouts/Layout.astro';
import { requireAuth } from '../lib/auth';
import { supabase } from '../lib/supabase';

const session = requireAuth(Astro.cookies);
if (!session) return Astro.redirect('/login');

const id = Astro.url.searchParams.get('id');
const { data: post, error } = await supabase
  .from('posts')
  .select('*')
  .eq('id', id)
  .eq('author_id', session.id)
  .single();

if (error || !post) return Astro.redirect('/dashboard');
---
<Layout title="Edit Post">
  <div class="container mt-5">
    <h2>Edit Post</h2>
    <form action="/api/posts/update" method="POST">
      <input type="hidden" name="postId" value={post.id} />
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" name="title" class="form-control" value={post.title} required />
      </div>
      <div class="mb-3">
        <label class="form-label">Content</label>
        <textarea name="content" class="form-control" rows="10" required>{post.content}</textarea>
      </div>
      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Update Post</button>
        <a href="/dashboard" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</Layout>