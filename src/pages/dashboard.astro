---
import Layout from '../layouts/Layout.astro';
import { requireAuth } from '../lib/auth';
import { supabase } from '../lib/supabase';

const session = requireAuth(Astro.cookies);
if (!session) return Astro.redirect('/login');

const { data: userPosts } = await supabase
  .from('posts')
  .select('*')
  .eq('author_id', session.id)
  .order('created_at', { ascending: false });
---
<Layout title="Dashboard">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-8">
                <h2 class="fw-bold">Your Account Dashboard</h2>
                <p class="text-muted">Manage your published content and engagement metrics.</p>
            </div>
            <div class="col-md-4 text-end">
                <a href="/create-post" class="btn-purple">New Publication</a>
            </div>
        </div>

        <div class="glass-card overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 py-3">Content Title</th>
                            <th class="py-3 text-center">Engagement</th>
                            <th class="py-3 text-end pe-4">Manage</th>
                        </tr>
                    </thead>
                    <tbody>
                        {userPosts?.map((p: any) => (
                          <tr>
                            <td>{p.title}</td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</Layout>