---
import { getSession } from '../lib/auth';
const session = getSession(Astro.cookies);
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Mindraft</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --amz-purple: #6200ea;
            --amz-light-bg: #f8f9fa;
            --amz-nav-dark: #131921;
            --white: #ffffff;
        }
        body {
            font-family: 'Public Sans', sans-serif;
            background-color: var(--amz-light-bg);
            color: var(--amz-nav-dark);
            margin: 0;
        }
        .navbar {
            background-color: var(--amz-nav-dark);
            padding: 0.6rem 2rem;
            border-bottom: 4px solid var(--amz-purple);
        }
        .navbar-brand {
            font-weight: 700;
            color: var(--white) !important;
            font-size: 1.6rem;
            letter-spacing: -1px;
        }
        .navbar-brand span {
            color: var(--amz-purple);
        }
        .nav-link {
            color: #d1d1d1 !important;
            font-weight: 500;
            transition: 0.2s;
        }
        .nav-link:hover {
            color: var(--white) !important;
        }
        .btn-purple {
            background-color: var(--amz-purple);
            color: var(--white);
            border-radius: 6px;
            padding: 8px 24px;
            border: none;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .btn-purple:hover {
            background-color: #4500b5;
            box-shadow: 0 4px 15px rgba(98, 0, 234, 0.4);
            transform: translateY(-1px);
        }
        .glass-card {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s;
        }
        .glass-card:hover {
            transform: translateY(-5px);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Min<span>Draft</span></a>
            <div class="collapse navbar-collapse justify-content-end">
                <ul class="navbar-nav align-items-center">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    {session ? (
                        <>
                            <li class="nav-item"><a class="nav-link" href="/dashboard">Account</a></li>
                            <li class="nav-item ms-3">
                                <form action="/api/auth/logout" method="POST">
                                    <button class="btn-purple btn-sm">Sign Out</button>
                                </form>
                            </li>
                        </>
                    ) : (
                        <>
                            <li class="nav-item"><a class="nav-link" href="/login">Sign In</a></li>
                            <li class="nav-item ms-3">
                                <a href="/signup" class="btn-purple btn-sm">Get Started</a>
                            </li>
                        </>
                    )}
                </ul>
            </div>
        </div>
    </nav>
    <main class="py-5">
        <slot />
    </main>
</body>
</html>
